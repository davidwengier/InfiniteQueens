@using InfiniteQueens.Models
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

@if (ShowHistory && HasHistory)
{
    <button class="history-toggle-btn" @onclick="TogglePopup">
        üèÜ History
    </button>
    
    @if (isPopupOpen)
    {
        <div class="history-overlay" @onclick="ClosePopup">
            <div class="history-popup" @onclick:stopPropagation>
                <div class="history-popup-header">
                    <h3>@(BoardSize)x@(BoardSize) Game History</h3>
                    <button class="history-close-btn" @onclick="ClosePopup">‚úï</button>
                </div>
                <div class="history-list">
                    @foreach (var (game, index) in History.Select((g, i) => (g, i)))
                    {
                        <div class="history-item">
                            @if (index == 0)
                            {
                                <span class="medal">ü•á</span>
                            }
                            else if (index == 1)
                            {
                                <span class="medal">ü•à</span>
                            }
                            else if (index == 2)
                            {
                                <span class="medal">ü•â</span>
                            }
                            else
                            {
                                <span class="medal"></span>
                            }
                            <span class="game-num">Game #@game.GameNumber</span>
                            <span class="game-time">@FormatTime(game.Time)</span>
                            @if (game.Seed.HasValue)
                            {
                                <button class="game-seed" @onclick="() => ShareSeedLink(game.Seed.Value)" title="Share this board">
                                    üì§ Seed: @game.Seed.Value
                                </button>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    }
}

@code {
    [Parameter]
    public bool ShowHistory { get; set; }
    
    [Parameter]
    public bool HasHistory { get; set; }
    
    [Parameter]
    public int BoardSize { get; set; }
    
    [Parameter]
    public IEnumerable<GameResult> History { get; set; } = Enumerable.Empty<GameResult>();
    
    private bool isPopupOpen = false;
    
    private void TogglePopup()
    {
        isPopupOpen = !isPopupOpen;
    }
    
    private void ClosePopup()
    {
        isPopupOpen = false;
    }
    
    private string FormatTime(TimeSpan time)
    {
        return time.ToString(@"mm\:ss");
    }
    
    private string GetSeedUrl(int seed)
    {
        return $"?size={BoardSize}&seed={seed}";
    }
    
    private async Task ShareSeedLink(int seed)
    {
        var url = NavigationManager.ToAbsoluteUri(GetSeedUrl(seed)).ToString();
        var title = $"Infinite Queens {BoardSize}x{BoardSize} Game";
        await JSRuntime.InvokeVoidAsync("shareLink", url, title);
    }
}
