@using InfiniteQueens.Models
@inject NavigationManager NavigationManager

@if (ShowHistory && HasHistory)
{
    <div class="history-pane">
        <h3>@(BoardSize)x@(BoardSize) Game History</h3>
        <div class="history-list">
            @foreach (var (game, index) in History.Select((g, i) => (g, i)))
            {
                <div class="history-item">
                    @if (index == 0)
                    {
                        <span class="medal">ðŸ¥‡</span>
                    }
                    else if (index == 1)
                    {
                        <span class="medal">ðŸ¥ˆ</span>
                    }
                    else if (index == 2)
                    {
                        <span class="medal">ðŸ¥‰</span>
                    }
                    else
                    {
                        <span class="medal"></span>
                    }
                    <span class="game-num">Game #@game.GameNumber</span>
                    <span class="game-time">@FormatTime(game.Time)</span>
                    @if (game.Seed.HasValue)
                    {
                        <a href="@GetSeedUrl(game.Seed.Value)" target="_blank" class="game-seed" title="Open this board in new tab">
                            Seed: @game.Seed.Value
                        </a>
                    }
                </div>
            }
        </div>
    </div>
}

@code {
    [Parameter]
    public bool ShowHistory { get; set; }
    
    [Parameter]
    public bool HasHistory { get; set; }
    
    [Parameter]
    public int BoardSize { get; set; }
    
    [Parameter]
    public IEnumerable<GameResult> History { get; set; } = Enumerable.Empty<GameResult>();
    
    private string FormatTime(TimeSpan time)
    {
        return time.ToString(@"mm\:ss");
    }
    
    private string GetSeedUrl(int seed)
    {
        return $"?size={BoardSize}&seed={seed}";
    }
}
